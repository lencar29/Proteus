@model AgencyAlchemy.Models.ResetPasswordModel

@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new  {Class="form-horizontal"})) 
{ 
    <div class='form-group'>
        @Html.TextBoxFor(m => m.Email, new {Class="email mandatory form-control", placeholder="Enter your email", type="email", required=true})
    </div>
    <div class='form-group'>
        <input class="button btn btn-lg btn-primary btn-block" name="commit" type="submit" value="Reset" />
    </div>
}
<p class='other_pages'>
     @Html.ActionLink("Remembered your password?", "Login", null, new {Class="btn btn-link"} )
</p>
